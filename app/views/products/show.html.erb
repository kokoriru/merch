Wish List

<%= @product.categories.map(&:parent).map(&:name).uniq.join(', ') %>

<table border=1>
  <tr>
    <th>ID</th>
    <td><%= @product.id %></td>
  </tr>
  <tr>
    <th>メーカー</th>
    <td><%= @product.manufacturer %></td>
  </tr>
  <tr>
    <th>名称</th>
    <td><%= @product.name %></td>
  </tr>
  <tr>
    <th>状態</th>
    <td><%= @product.status %></td>
  </tr>
  <tr>
    <th>名称</th>
    <td>
      <ul>
        <% @product.categories.each do |category| %>
          <li><%= category.name %></li>
        <% end %>
      </ul>
    </td>
    </tr>
  <tr>
    <th>受注生産</th>
    <td><%= @product.made_to_order %></td>
  </tr>
  <tr>
    <th>予約開始日時</th>
    <td><%= @product.started_at %></td>
  </tr>
  <tr>
    <th>予約終了日時</th>
    <td><%= @product.ended_at %></td>
  </tr>
  <tr>
    <th>予約完了日</th>
    <td><%= @product.reserved_at %></td>
  </tr>
  <tr>
    <th>到着予定時期</th>
    <td><%= @product.scheduled_arrival %></td>
  </tr>
  <tr>
    <th>URL</th>
    <td><%= @product.url %></td>
  </tr>
  <tr>
    <th>備考</th>
    <td><%= @product.note %></td>
  </tr>
  <tr>
    <th>作成日時</th>
    <td><%= @product.created_at %></td>
  </tr>
  <tr>
    <th>更新日時</th>
    <td><%= @product.updated_at %></td>
  </tr>
</table>

<%= link_to '一覧に戻る', products_path %>
<%= link_to '編集', edit_product_path(@product) %>
