<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
  <div class="container">
    <%= link_to 'Merch', root_path, class: 'navbar-brand' %>
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
      Menu
      <i class="fa fa-bars"></i>
    </button>
    <div class="collapse navbar-collapse" id="navbarResponsive">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item"><%= link_to 'Wish List', products_path %></li>
      </ul>
    </div>
  </div>
</nav>

<!-- Page Header -->
<header class="masthead" style="background-image: url(<%= asset_path "home-bg.jpg" %>)">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <h1>Merch</h1>
          <span class="subheading">商品の販売/購入状況を一括管理</br>まずは、あなたのほしいものを登録しよう！</span>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <% @products.each do |product| %>
        <div class="post-preview">
          <h2 class="post-title"><%= link_to "#{product.name} (#{product.manufacturer})", product_path(product) %></h2>
          <!-- <h3 class="post-subtitle"> --><%# product.manufacturer %><!-- </h3> -->
          <p class="post-meta"><%= product.started_at %></p>
        </div>
        <hr>
      <% end %>
    </div>
 </div>
</div>

<hr>

